@model RH.Services.RestApi.Models.CityTileWebViewModel;

@{
    ViewBag.Title = "دما";
    Layout = "_Layout";
}


<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="">
            <div class="card">
                <div class="card-header">
                    <h2>دما</h2>
                </div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-controller="CityTileWeb" asp-action="Index" method="get" class="form-horizontal ">
                                <div class="form-group row">
                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3">
                                        <label asp-for="Zoom" class="control-label">بزرگنمایی</label>
                                        <input name="Zoom" value="@ViewBag.Zoom" type="number" placeholder="بزرگنمایی" class="form-control" min="@ViewBag.Borders.MinZ" max="@ViewBag.Borders.MaxZ" />
                                    </div>

                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3">
                                        <label asp-for="X" class="control-label">طول</label>
                                        <input name="X" value="@ViewBag.X" type="number" placeholder="طول" class="form-control" min="@ViewBag.Borders.MinX" max="@ViewBag.Borders.MaxX" />
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3">
                                        <label asp-for="Y" class="control-label">عرض</label>
                                        <input name="Y" value="@ViewBag.Y" type="number" placeholder="عرض" class="form-control" min="@ViewBag.Borders.MinY" max="@ViewBag.Borders.MaxY" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3">
                                        <label asp-for="cityTileType" class="control-label">منبع</label>
                                        <select id="cityTileType" name="cityTileType" class="form-control" style="height:37.47px !important" value="@ViewBag.cityTileType">
                                            @if (ViewBag.cityTileType == "GFS")
                                            {
                                                <option value="GFS" selected="selected">GFS</option>
                                                <option value="ECMWF">ECMWF</option>
                                            }
                                            else
                                            {
                                                <option value="GFS">GFS</option>
                                                <option value="ECMWF" selected="selected">ECMWF</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3">
                                        <label asp-for="Date" class="control-label">زمان</label>
                                        <input name="Date" value="@ViewBag.Date" type="datetime-local" placeholder="زمان" class="form-control" />
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-xl-4 mb-3 ">
                                        <label class="control-label">&nbsp;</label>
                                        <button type="submit" class="btn btn-primary form-control">جستجو</button>
                                        @*<button type="submit" style="position: absolute; bottom: 0px;" class="btn btn-primary w-100">جستجو</button>*@
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @if (Model.HasData)
                    {

                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-block">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>ردیف</th>
                                                    <th>طول </th>
                                                    <th>عرض</th>
                                                    <th>زمان</th>
                                                    <th>دما (کلوین)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int index = 0;
                                                    foreach (var record in Model.CityTiles)
                                                    {
                                                        index++;
                                                        <tr>
                                                            <td class="align-middle">@index</td>
                                                            <td class="align-middle">@record.X</td>
                                                            <td class="align-middle">@record.Y</td>
                                                            <td class="align-middle">@record.WindyDateTime</td>
                                                            <td class="align-middle">@record.DataString</td>
                                                        </tr>
                                                    }

                                                }
                                            </tbody>
                                        </table>

                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12">
                                داده ای برای نمایش وجود ندارد
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>