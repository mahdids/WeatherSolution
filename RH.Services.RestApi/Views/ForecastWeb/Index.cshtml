@model RH.Services.RestApi.Models.ForecastWebViewModel;

@{
    ViewBag.Title = "آب و هوا";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="">
            <div class="card">
                <div class="card-header">
                    <h2>آب و هوا</h2>
                </div>
                <div class="card-block">

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-controller="ForecastWeb" asp-action="Index" method="get" class="form-horizontal ">
                                <div class="form-group row">
                                    <div class="col-md-6 col-lg-4 col-xl-2 mb-3">
                                        <label asp-for="forecastType" class="control-label">منبع</label>
                                        <select id="forecastType" name="ForecastType" class="form-control">
                                            @if (ViewBag.forecastType == "GFS")
                                            {
                                                <option value="GFS" selected="selected">GFS</option>
                                                <option value="ECMWF">ECMWF</option>
                                            }
                                            else
                                            {
                                                <option value="GFS">GFS</option>
                                                <option value="ECMWF" selected="selected">ECMWF</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6 col-lg-4 col-xl-2 mb-3">
                                        <label asp-for="X" class="control-label">طول جغرافیایی</label>

                                        <input name="X" value="@ViewBag.X" type="number" placeholder="طول جغرافیایی" class="form-control" />
                                    </div>
                                    <div class="col-md-6 col-lg-4 col-xl-2 mb-3">
                                        <label asp-for="Y" class="control-label">عرض جغرافیایی</label>
                                        <input name="Y" value="@ViewBag.Y" type="number" placeholder="عرض جغرافیایی" class="form-control" />
                                    </div>
                                    <div class="col-md-6 col-lg-4 col-xl-2 mb-3">
                                        <label asp-for="Date" class="control-label">زمان</label>

                                        <input name="Date" value="@ViewBag.Date" type="datetime-local" placeholder="زمان" class="form-control" />
                                    </div>
                                    <div class="col-md-6 col-lg-4 col-xl-2 mb-3 pull-left">
                                        
                                        <button type="submit" style="position: absolute; bottom: 0px;" class="btn btn-primary w-100">جستجو</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @if (Model.HasData)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-block">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>ردیف</th>
                                                    <th>ReferenceTime</th>
                                                    <th>DateTime</th>
                                                    <th>WeatherCode</th>
                                                    <th>Mm</th>
                                                    <th>Temperature</th>
                                                    <th>Wind</th>
                                                    <th>WindDirection</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int index = 0;
                                                    foreach (var record in Model.Forecasts)
                                                    {
                                                        index++;
                                                        <tr>
                                                            <td class="align-middle">@index</td>
                                                            <td class="align-middle">@record.ReferenceTime</td>
                                                            <td class="align-middle">@record.DateTime</td>
                                                            <td class="align-middle">@record.WeatherCode</td>
                                                            <td class="align-middle">@record.Mm</td>
                                                            <td class="align-middle">@record.Temperature</td>
                                                            <td class="align-middle">@record.Wind</td>
                                                            <td class="align-middle">@record.WindDirection</td>
                                                        </tr>
                                                    }

                                                }
                                            </tbody>
                                        </table>

                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12">
                                داده ای برای نمایش وجود ندارد
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


