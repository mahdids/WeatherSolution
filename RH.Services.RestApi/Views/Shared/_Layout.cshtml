    <!-- Main content -->
    <main class="main">

        @RenderBody()

    </main>


    <script src="~/js/CoreUi/libs/jquery.min.js"></script>
    <script src="~/js/CoreUi/app.js"></script>
    <script src="~/js/CoreUi/libs/tether.min.js"></script>
    <script src="~/js/CoreUi/libs/bootstrap.min.js"></script>
    <script src="~/js/CoreUi/persian-date/jalali-moment.js"></script>
